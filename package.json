{
  "name": "vite-elm-template",
  "author": "Lindsay Wardell",
  "description": "A default template for building Elm applications using Vite.",
  "version": "1.7.0",
  "license": "MIT",
  "scripts": {
    "postinstall": "elm-tooling install",
    "dev": "run-pty % npm run css:watch % vite",
    "prebuild": "elm-tooling install",
    "build": "npm run css:build && vite build",
    "serve": "vite preview",
    "lint": "elm-review",
    "test": "elm-test-rs",
    "css:watch": "npx tailwindcss -i ./src/input.css -o src/style.build.css --watch",
    "css:build": "tailwindcss -i ./src/input.css -o src/style.build.css"
  },
  "devDependencies": {
    "elm-review": "^2.9.1",
    "elm-tailwind-modules": "^0.5.0-alpha2",
    "elm-tooling": "^1.12.0",
    "postcss": "^8.4.21",
    "run-pty": "^4.0.3",
    "tailwindcss": "^3.2.7",
    "vite": "^4.1.4",
    "vite-plugin-elm": "^2.8.0-beta.3"
  },
  "dependencies": {
    "elm-debug-transformer": "^1.1.2"
  }
}
